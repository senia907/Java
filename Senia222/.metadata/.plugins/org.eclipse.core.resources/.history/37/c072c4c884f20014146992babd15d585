package compression_algorithms;
import java.util.BitSet;

/**
* Used for easy storing the char and its BitSet representation.
* @author  Senia Kalma
* @since   3/5/2015
*/
public class CharNode {
	char ch;
	BitSet bitRep = new BitSet();

	public String toString(){
		String data=null;
    	data+="Char: ";
		data+=ch;
    	data+=" is ";
		for(int j=0;j<(bitRep.length()-1);j++){	//the last bit=true as a placeholder, so we won't print it
			if((bitRep.get(j))==true)
	    		data+="0";
	    	else
	    		data+="1";
	    }
	    data+=(" in binary.\n");
	    
	    return data;
	}
}
